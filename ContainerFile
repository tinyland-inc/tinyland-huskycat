# Unified HuskyCat Container - Production
# Optimized Alpine-based container with all validation tools

FROM alpine:3.19 AS builder

# Install build dependencies
RUN apk add --no-cache \
    python3 \
    py3-pip \
    nodejs \
    npm \
    go \
    rust \
    cargo \
    gcc \
    musl-dev \
    python3-dev \
    linux-headers \
    git \
    curl \
    bash

# Install Python tools
RUN pip3 install --no-cache-dir --break-system-packages \
    black \
    flake8 \
    autoflake \
    mypy \
    pylint \
    bandit \
    ruff \
    isort \
    yamllint \
    ansible-lint \
    hypothesis \
    pytest \
    pytest-cov \
    pytest-asyncio \
    pytest-timeout \
    pytest-xdist \
    jsonschema \
    pyyaml \
    requests \
    pydantic \
    mkdocs \
    mkdocs-material \
    mkdocs-mermaid2-plugin

# Install Node.js tools
RUN npm install -g \
    eslint \
    prettier \
    typescript \
    @typescript-eslint/parser \
    @typescript-eslint/eslint-plugin

# Install Go tools (commented out for now)
# RUN go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest
# RUN go install github.com/securecodewarrior/sast-scan@latest

# Create empty go bin directory for multi-stage copy
RUN mkdir -p /go/bin

# Install security tools
RUN pip3 install --no-cache-dir --break-system-packages \
    safety \
    gitpython

# Install Shell tools
RUN apk add --no-cache shellcheck

# Install Docker tools with multi-arch support
WORKDIR /tmp
RUN ARCH=$(uname -m) && \
    if [ "$ARCH" = "x86_64" ]; then HADOLINT_ARCH="x86_64"; \
    elif [ "$ARCH" = "aarch64" ]; then HADOLINT_ARCH="arm64"; \
    else HADOLINT_ARCH="$ARCH"; fi && \
    echo "Downloading hadolint for architecture: $HADOLINT_ARCH" && \
    curl -L "https://github.com/hadolint/hadolint/releases/latest/download/hadolint-Linux-${HADOLINT_ARCH}" -o /usr/local/bin/hadolint && \
    chmod +x /usr/local/bin/hadolint

# Install Rust tools (TOML formatter) - use pre-built binaries instead of cargo install
# This avoids 60+ minute Rust compilation on ARM64
RUN ARCH=$(uname -m) && \
    TAPLO_VERSION="0.10.0" && \
    if [ "$ARCH" = "x86_64" ]; then TAPLO_ARCH="linux-x86_64"; \
    elif [ "$ARCH" = "aarch64" ]; then TAPLO_ARCH="linux-aarch64"; \
    else echo "Unsupported architecture for taplo: $ARCH, skipping..."; exit 0; fi && \
    echo "Downloading taplo ${TAPLO_VERSION} for architecture: ${TAPLO_ARCH}" && \
    curl -L "https://github.com/tamasfe/taplo/releases/download/${TAPLO_VERSION}/taplo-${TAPLO_ARCH}.gz" -o taplo.gz && \
    gunzip taplo.gz && \
    chmod +x taplo && \
    mv taplo /root/.cargo/bin/taplo || mkdir -p /root/.cargo/bin && mv taplo /root/.cargo/bin/taplo

# Install Terraform with multi-arch support
RUN TERRAFORM_VERSION=1.9.8 && \
    ARCH=$(uname -m) && \
    if [ "$ARCH" = "x86_64" ]; then TF_ARCH="amd64"; \
    elif [ "$ARCH" = "aarch64" ]; then TF_ARCH="arm64"; \
    else TF_ARCH="amd64"; fi && \
    echo "Downloading Terraform ${TERRAFORM_VERSION} for architecture: linux_${TF_ARCH}" && \
    wget https://releases.hashicorp.com/terraform/${TERRAFORM_VERSION}/terraform_${TERRAFORM_VERSION}_linux_${TF_ARCH}.zip && \
    unzip terraform_${TERRAFORM_VERSION}_linux_${TF_ARCH}.zip && \
    mv terraform /usr/local/bin/ && \
    rm terraform_${TERRAFORM_VERSION}_linux_${TF_ARCH}.zip && \
    chmod +x /usr/local/bin/terraform

# Production stage
FROM alpine:3.19

# Install runtime dependencies only
RUN apk add --no-cache \
    python3 \
    py3-pip \
    nodejs \
    git \
    bash \
    libstdc++ \
    libgcc

# Create non-root user
RUN addgroup -g 1001 huskycat && \
    adduser -D -u 1001 -G huskycat huskycat

# Copy tools from builder
COPY --from=builder /usr/local/bin /usr/local/bin/
COPY --from=builder /usr/bin/black /usr/bin/black
COPY --from=builder /usr/bin/flake8 /usr/bin/flake8
COPY --from=builder /usr/bin/autoflake /usr/bin/autoflake
COPY --from=builder /usr/bin/mypy /usr/bin/mypy
COPY --from=builder /usr/bin/pylint /usr/bin/pylint
COPY --from=builder /usr/bin/bandit /usr/bin/bandit
COPY --from=builder /usr/bin/ruff /usr/bin/ruff
COPY --from=builder /usr/bin/isort /usr/bin/isort
COPY --from=builder /usr/bin/yamllint /usr/bin/yamllint
COPY --from=builder /usr/bin/ansible-lint /usr/bin/ansible-lint
COPY --from=builder /usr/bin/pytest /usr/bin/pytest
COPY --from=builder /usr/bin/shellcheck /usr/bin/shellcheck
COPY --from=builder /root/.cargo/bin/taplo /usr/local/bin/taplo
COPY --from=builder /usr/lib/python3.11 /usr/lib/python3.11/
COPY --from=builder /usr/lib/node_modules /usr/lib/node_modules/
# Copy Go tools (currently empty directory)
COPY --from=builder /go/bin /tmp/go-tools

# Copy application files
WORKDIR /app
COPY src/ /app/src/
COPY pyproject.toml /app/
COPY uv.lock /app/

# Set up workspace directory
RUN mkdir -p /workspace && \
    chown -R huskycat:huskycat /workspace /app

# Security hardening
RUN chmod -R 755 /app && \
    chmod -R 777 /tmp /workspace

# Switch to non-root user
USER huskycat
WORKDIR /workspace

# Environment variables
ENV PATH="/usr/local/bin:/app:${PATH}"
ENV PYTHONPATH="/app/src:${PYTHONPATH}"

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD python3 -c "import sys; sys.exit(0)"

# Entry point
ENTRYPOINT ["python3", "-m", "src.huskycat"]
CMD ["--help"]